body{background-color:#000505;color:#bfcde0;font-family:-apple-system,BlinkMacSystemFont,segoe ui,Roboto,Helvetica,Arial,sans-serif;line-height:1.6;margin:0;padding:0}.container{max-width:1200px;margin:0 auto;padding:0 2rem}.site-header{padding:2rem 0;text-align:center;background-color:rgba(59,51,85,.1);margin-bottom:2rem}.site-header .site-title{margin:0;font-size:2.5rem}.site-header .site-title a{color:#bfcde0;text-decoration:none}.site-header .site-title a:hover{color:#e1e8f1}.site-header .site-subtitle{margin:.5rem 0 0;font-size:1.2rem;color:#fff}.content{padding:2rem 0}.content h2{color:#3b3355;margin-top:2rem;margin-bottom:1rem}.content .video-container{margin:2rem 0;border-radius:8px;overflow:hidden;box-shadow:0 4px 6px rgba(0,0,0,.1)}.content .works-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:2rem;margin:2rem 0}.site-footer{padding:2rem 0;text-align:center;background-color:rgba(59,51,85,.1);margin-top:2rem}@media(max-width:768px){.container{padding:0 1rem}.site-header .site-title{font-size:2rem}.content .works-grid{grid-template-columns:1fr}}